[core]
    ignorecase = false
    autocrlf = false
    excludesfile = ~/.gitexcludes
    preloadindex = true
[merge]
    tool = vimdiff
[user]
    email = anthony@clays.me
    name = Anthony Clays
    signingkey = anthony@clays.me
[commit]
    gpgsign = true
[push]
    default = simple
[pull]
    rebase = true
[alias]
    lg = log --color --decorate --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(blue)<%an>%Creset' --abbrev-commit
    b = branch
    ba = branch --all
    co = checkout
    c = commit -S
    s = !git status -sb && git stash list
    unstage = reset HEAD --
    last = log -1 HEAD
    d = icdiff # needs git-icdiff
    rebase = rebase -S
    cl = clone
[github]
    user = anthonyclays
[color]
    ui = yes
[color "branch"]
    current = white green
    local = yellow
    remote = magenta
[color "status"]
    # Staged
    added = green
    updated = white green
    # Unstaged
    changed = yellow
    untracked = cyan
    nobranch = red white
[remote "origin"]
    fetch = +refs/pull/*/head:refs/remotes/origin/pr/*

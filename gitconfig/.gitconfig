[core]
	ignorecase = false
	autocrlf = false
	excludesfile = ~/.gitexcludes
	preloadindex = true
[merge]
	tool = vimdiff
[user]
	email = anthonyclays@gmail.com
	name = Anthony Clays
[push]
	default = simple
[alias]
	lg = log --color --decorate --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(blue)<%an>%Creset' --abbrev-commit
	b = branch
	ba = branch --all
	co = checkout
	c = commit
	br = branch
	s = !git status -sb && git stash list
	unstage = reset HEAD --
	last = log -1 HEAD
	d = icdiff # needs git-icdiff
	w = wtf # needs git-wtf
	cl = clone
[github]
	user = anthonyclays
[git-up "bundler"]
	check = false
[git-up "fetch"]
	prune = true
[color]
	ui = yes
[color "branch"]
	current = white green
	local = yellow
	remote = magenta
[color "status"]
	# Staged
	added = green
	updated = white green
	# Unstaged
	changed = yellow
	untracked = cyan
	nobranch = red white
